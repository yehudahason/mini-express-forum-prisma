generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  username  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("Users")
}

model Forum {
  id          Int     @id @default(autoincrement())
  name        String
  slug        String? @unique
  description String?

  threads Thread[]

  @@map("forums")
}

model Thread {
  id        Int       @id @default(autoincrement())
  forumId   Int       @map("forum_id")
  title     String
  author    String?
  content   String
  createdAt DateTime? @default(now()) @map("created_at")

  forum   Forum   @relation(fields: [forumId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  replies Reply[]

  @@index([forumId])
  @@index([createdAt])
  @@map("threads")
}

model Reply {
  id        Int       @id @default(autoincrement())
  threadId  Int       @map("thread_id")
  author    String?
  content   String
  createdAt DateTime? @default(now()) @map("created_at")

  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([threadId])
  @@index([createdAt])
  @@map("replies")
}
